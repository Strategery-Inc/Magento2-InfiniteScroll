<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <strategery_infinitescroll>
            <general>
                <enabled>1</enabled>
                <debug>0</debug>
            </general>
            <instances>
                <grid>1</grid>
                <layer>1</layer>
                <search>1</search>
                <advanced>1</advanced>
            </instances>
            <selectors>
                <content>.column.main</content>
                <next>.next</next>
                <previous>.previous</previous>
                <items_grid>.products-grid</items_grid>
                <items_list>.products-list</items_list>
                <loading>.column.main</loading>
                <toolbar>.toolbar</toolbar>
                <pagination>.toolbar .limiter</pagination>
            </selectors>
            <design>
                <loading_img><![CDATA[]]></loading_img>
                <loading_text><![CDATA[<em>Loading products...</em>]]></loading_text>
                <done_text></done_text>
                <hide_toolbar>1</hide_toolbar>
                <hide_pagination>1</hide_pagination>
                <animate>0</animate>
                <local_mode>0</local_mode>
                <extra_scroll_px>150</extra_scroll_px>
                <buffer_px>150</buffer_px>
                <load_more_text>Load more items</load_more_text>
                <load_more_text_prev>Load previous items</load_more_text_prev>
                <load_more_threshold>5</load_more_threshold>
            </design>
            <memory>
                <enabled>1</enabled>
            </memory>
        </strategery_infinitescroll>
    </default>
</config>
